<div class="registro">
  <h1 class="text-center">Editar usuario</h1>
  {{#each tasks}}
  <form action="" method="POST" class="mt-4">
    <div class="username">
      <input id="nombre" name="nombre" type="text" value="{{nombre}}" required />
      <label for="nombre">Nombres y Apellidos</label>
    </div>
    <div class="username">
      <input id="usuario" name="usuario" type="text" value="{{usuario}}" required />
      <label for="usuario">Usuario</label>
    </div>
    <div class="username">
      <input id="cedula" name="cedula" type="number" value="{{cedula}}" required />
      <label for="cedula">Cédula</label>
    </div>
    <div class="username">
      <input id="email" name="email" type="email" value="{{email}}" required />
      <label for="email">Correo Electrónico</label>
    </div>
    <div class="username">
      <input id="password" name="password" type="password" value="{{password}}" required />
      <label for="password">Contraseña</label>
    </div>

    <button type="submit" class="">Actualizar</button>
  </form>
  {{/each}}
</div>